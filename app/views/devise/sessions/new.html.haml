.single_header
  %h1.single_header__logo
    = link_to root_path do
      = image_tag("/assets/mercarilogo-f4c823301da0441f633837b7b207f4711269ff5c49e8d82f66df3324031a30cc.svg")

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .main
    .main__sign_in
      -# = devise_error_messages!
      .main__sign_in__title
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_user_path(resource_name),class: "sign_up_btn"
      .main__sign_in__button
        %ul
          %li
            = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, class: "facebook_btn"
          -# = fa_icon 'facebook-square'
          %li
            %button.google_btn
              = link_to "Googleでログイン",user_google_oauth2_omniauth_authorize_path
              .google-logo
                = image_tag("google-logo.svg")
      .main__sign_in__form
        %ul
          %li
            = f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "メールアドレス"
          %li
            = f.password_field :password, autocomplete: "current-password" ,placeholder: "パスワード"
          %li.sample
            .reCAPTCHA
              = recaptcha_tags
          %li
            = f.button "ログイン",class: 'red_btn'
          %li
            = link_to "パスワードをお忘れの方", new_password_path(resource_name)

= render "devise/registrations/footer"
